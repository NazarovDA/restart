datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  type               String
  id                 String               @id @default(cuid())
  name               String
  qualification      String?
  unit               String?
  price1             String?
  price2             String?
  price3             String?
  ProductDescription ProductDescription[]
}

model ProductDescription {
  id        String @id
  product Product @relation(fields: [id], references: [id])
  short String?
  long String?
}

