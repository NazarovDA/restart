model Product {
  type               String
  id                 String               @id @default(cuid())
  name               String
  qualification      String?
  unit               String?
  price1             String?
  price2             String?
  price3             String?
  shortDescription String?
  longDescription String?
  hashImage String?
}

model UserTable {
  id String @id @default(cuid())
  status String // admin, editor, phPerson, juPerson

  login String @unique
  password String // @db.Char(64)
} 

model Settings {
  param String @unique @db.VarChar(20)
  value String
}